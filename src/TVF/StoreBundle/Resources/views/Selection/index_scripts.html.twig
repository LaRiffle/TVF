<script type="text/javascript" src="{{ asset('bundles/TVF/slick/slick.min.js') }}"></script>
<script type="text/javascript">
    $(document).ready(function(){
      var screen_width = $('#selection_carousel').parent().width();
      if(screen_width < 567){
        $('.selection-description').css('color', 'white');
      }
      if(screen_width >= 768){
        nb_slides = 3;
      } else if(screen_width >= 567){
        nb_slides = 2;
      } else {
        nb_slides = 1;
      }
      $('.selection-carousel').slick({
        infinite: true,
        slidesToShow: nb_slides,
        slidesToScroll: 1
      });
      $('.selection-carousel').css('visibility', 'hidden').show();
      setTimeout(function(){
        $('.selection-carousel').css('display', 'none').css('visibility', 'visible').fadeIn();
      }, 100);
    });
</script>
