    <script>
    function portray(img){
      var width = img.width();
      var height = img.height();
      if(width == 0 || height == 0){
        console.log('Portraying failed');
        setTimeout(function(){
          console.log('New attempt for portraying');
          portray(img);
        }, 500);
      } else {
        if(width < height){
           img.addClass('portrait');
        }
        img.show();
      }
    }
    $(document).ready(function() {
        $('.creation-icon img').each(function(){
            var img = $(this);
            portray(img);
        });
    });
    </script>
