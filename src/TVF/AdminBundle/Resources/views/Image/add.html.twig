

<form class="form-signin" name="form" method="post" enctype="multipart/form-data" action="{{ path('tvf_admin_image_add',{'id': id}) }}">
  {% set input_form="TVFAdminBundle:Utils:form_input.html.twig" %}
  {% set save_form="TVFAdminBundle:Utils:form_save.html.twig" %}
  <h6 class="form-signin-heading">{% if id == 0 %}Créer{% else %}Modifier une image{% endif %}</h6>
  {{ include(input_form, {'element': form.role, 'name':"Rôle"}) }}
  {% if id != 0 and img != '' %}
  <div style="margin-top: 1rem; font-weight: bold;">Modifier l'image</div>
  <img src="{{ asset('uploads/img/' ~ img) }}" class="img-thumbnail" width="300">
  {% endif %}
  {{ include(input_form, {'element': form.image, 'name':"Ajouter une image"}) }}
  {{ include(save_form, {'element': form.save, 'name':"Publier"}) }}
  {{ form_rest(form) }}
</form>
